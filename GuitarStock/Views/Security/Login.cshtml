@model GuitarStock.Models.Signin

@{
    ViewData["Title"] = "Login";
}

<div class="container col-sm">
    <div class="text-center">
        <h1 class="display-4">Login Page</h1>
    </div>

    <form method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group ">
            <label asp-for="UserName">Username:</label>
            <input type="text" class="form-control" asp-for="UserName" required>
        </div>
        <div class="form-group">
            <label asp-for="Password">Password</label>
            <input type="password" class="form-control" asp-for="Password" required>
        </div>
        <div class="form-check">
            <input type="checkbox" class="form-check-input" asp-for="RememberMe">
            <label class="form-check-label" asp-for="RememberMe">Remember Me:</label>
        </div>
        <br>
        <button type="submit" class="btn btn-primary" asp-controller="Security" asp-action="Login">Login</button>
        <a class="btn btn-secondary" asp-controller="Home" asp-action="Index">Back</a>

        <p><a asp-controller="Security" asp-action="Register">Register a new account here</a></p>
    </form>
</div>