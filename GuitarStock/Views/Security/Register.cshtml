@model GuitarStock.Models.Register

@{ 
    // https://www.youtube.com/watch?v=UUpSY-P3CKA&t=473s
}


@{
    ViewData["Title"] = "Register";
}

<div class="container col-sm">
    <div class="text-center">
        <h1 class="display-4">Register your details</h1>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>

    <form method="post" asp-action="Register">
        <div class="form-group">
            <label asp-for="UserName">Username:</label>
            <input type="text" class="form-control" asp-for="UserName">
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password">Password:</label>
            <input type="password" class="form-control" asp-for="Password">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ConfirmPassword">Confirm Password:</label>
            <input type="password" class="form-control" asp-for="ConfirmPassword">
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Email">Email Address:</label>
            <input type="email" class="form-control" asp-for="Email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="FirstName">First Name:</label>
            <input type="text" class="form-control" asp-for="FirstName">
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="LastName">Last Name:</label>
            <input type="text" class="form-control" asp-for="LastName">
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <div class="col-2 ">
                <button type="submit" class ="btn btn-primary">Confirm</button>
                <a class="btn btn-dark w-50">Back</a>
            </div>
        </div>
    </form>

    <h1>Already have a profile?</h1>
    <p><a asp-controller="Security" asp-action="Login">Login here</a></p>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}